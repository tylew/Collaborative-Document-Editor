{
  "name": "crdt-server-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "anysphere.cpptools",
        "llvm-vs-code-extensions.vscode-clangd"
      ],
      "settings": {
        "C_Cpp.default.compileCommands": "/workspace/compile_commands.json",
        "clangd.arguments": [
          "--compile-commands-dir=/workspace"
        ]
      }
    }
  },
  "postCreateCommand": "cd /workspace && make compile_commands || true"
}